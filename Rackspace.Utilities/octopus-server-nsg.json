{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "2018.11.01.0",
  "parameters": {
    "Name": {
      "type": "string",
      "metadata": {
        "description": "The name of the NSG to update"
      }
    },
    "AgentPrefix": {
      "type": "string",
      "metadata": {
        "description": "The CIDR of the Octopus Agent subnet"
      }
    },
    "SubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "The CIDR of the subnet this NSG is attached to"
      },
      "defaultValue": "VirtualNetwork"
    },
    "Mode": {
      "type": "string",
      "allowedValues": [
        "Polling",
        "Listening"
      ],
      "defaultValue": "Listening",
      "metadata": {
        "description": "This is the Octopus agent mode, determines the set of rules to deploy"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "condition": "[equals(parameters('Mode'),'Listening')]",
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkSecurityGroups/securityRules",
      "name": "[concat(parameters('Name'),'/Allow_Agent_Listening_INBOUND')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "description": "Allows inbound connections from agent subnet",
        "protocol": "Tcp",
        "sourcePortRange": "*",
        "destinationPortRange": "443",
        "sourceAddressPrefix": "[parameters('AgentPrefix')]",
        "destinationAddressPrefix": "[parameters('SubnetPrefix')]",
        "access": "Allow",
        "priority": 141,
        "direction": "Inbound"
      }
    },
    {
      "condition": "[equals(parameters('Mode'),'Polling')]",
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkSecurityGroups/securityRules",
      "name": "[concat(parameters('Name'),'/Allow_Agent_Polling_INBOUND_443')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "description": "Allows inbound connections from agent subnet",
        "protocol": "Tcp",
        "sourcePortRange": "*",
        "destinationPortRange": "443",
        "sourceAddressPrefix": "[parameters('AgentPrefix')]",
        "destinationAddressPrefix": "[parameters('SubnetPrefix')]",
        "access": "Allow",
        "priority": 142,
        "direction": "Inbound"
      }
    },
    {
      "condition": "[equals(parameters('Mode'),'Polling')]",
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkSecurityGroups/securityRules",
      "name": "[concat(parameters('Name'),'/Allow_Agent_Polling_INBOUND_10943')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "description": "Allows inbound connections from agent subnet",
        "protocol": "Tcp",
        "sourcePortRange": "*",
        "destinationPortRange": "10943",
        "sourceAddressPrefix": "[parameters('AgentPrefix')]",
        "destinationAddressPrefix": "[parameters('SubnetPrefix')]",
        "access": "Allow",
        "priority": 143,
        "direction": "Inbound"
      }
    }
  ],
  "outputs": {
  }
}