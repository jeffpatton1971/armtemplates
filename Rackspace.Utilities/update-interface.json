{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "2018.08.01.0",
  "parameters": {
    "privateIPAllocationMethod": {
      "type": "string",
      "allowedValues": [
        "Dynamic",
        "Static"
      ],
      "defaultValue": "Dynamic"
    },
    "privateIPAddressVersion": {
      "type": "string",
      "allowedValues": [
        "IPv4",
        "IPv6"
      ],
      "defaultValue": "IPv4"
    },
    "privateIPAddress": {
      "type": "string",
      "defaultValue": ""
    },
    "LoadBalancerName": {
      "type": "string"
    },
    "VirtualNetworkName": {
      "type": "string"
    },
    "VirtualNetworkResourceGroup": {
      "type": "string"
    },
    "SubnetName": {
      "type": "string"
    }
  },
  "variables": {
    "ipConfigurations": [
      {
        "loadBalancerBackendAddressPools": {
          "id": "[parameters('loadBalancerBackendAddressPoolsId')]"
        },
        "privateIPAddress": "[parameters('privateIPAddress')]",
        "privateIPAllocationMethod": "[parameters('privateIPAllocationMethod')]",
        "privateIPAddressVersion": "[parameters('privateIPAddressVersion')]",
        "subnet": {
          "id": "[parameters('subnet')]"
        }
      }
    ],
  },
  "resources": [
    {
      "apiVersion": "2017-10-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('Name')]",
      "location": "[resourceGroup().location]",
      "dependsOn": "[if(empty(parameters('DependsOn')),json('null'),parameters('DependsOn'))]",
      "properties": {
        "loadBalancerBackendAddressPools": {
          "id": "[reference(concat('Microsoft.Network/loadBalancers/',parameters('LoadBalancerName')),'2017-06-01').backendAddressPools[0].id]"
        },
        "privateIPAllocationMethod": "[parameters('privateIPAllocationMethod')]",
        "privateIPAddressVersion": "[parameters('privateIPAddressVersion')]",
        "subnet": {
          "id": "[parameters('subnet')]"
        }
      },
      "tags": "[parameters('tags')]"
    }
  ],
  "outputs": {}
}