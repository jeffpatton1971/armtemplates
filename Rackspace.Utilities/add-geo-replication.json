{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "2019.04.01.0",
  "parameters": {
    "SourceDatabaseName": {
      "type": "array"
    },
    "SourceSqlServer": {
      "type": "string"
    },
    "SourceResourceGroup": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "serverName": {
      "type": "string"
    },
    "elasticPoolName": {
      "type": "string"
    },
    "createMode": {
      "type": "string"
    },
    "zoneRedundant": {
      "defaultValue": false,
      "type": "bool"
    },
    "licenseType": {
      "defaultValue": "",
      "type": "string"
    }
  },
  "variables": {
    "sqlResourceId": "[resourceId(parameters('SourceResourceGroup'),'Microsoft.Sql/servers',parameters('SourceSqlServer'))]",
    "elasticPoolId": "[concat(variables('sqlResourceId'),'/elasticPools/',parameters('elasticPoolName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2017-10-01-preview",
      "location": "[parameters('location')]",
      "dependsOn": [ ],
      "copy": {
        "name": "databases",
        "count": "[length(parameters('SourceDatabaseName'))]"
      },
      "name": "[concat(parameters('serverName'), '/',parameters('SourceDatabaseName')[copyIndex()])]",
      "properties": {
        "createMode": "[parameters('createMode')]",
        "sourceDatabaseId": "[concat(variables('sqlResourceId'),'/databases/',parameters('SourceDatabaseName')[copyIndex()])]",
        "zoneRedundant": "[parameters('zoneRedundant')]",
        "licenseType": "[parameters('licenseType')]",
        "elasticPoolId": "[variables('elasticPoolId')]"
      }
    }
  ],
  "outputs": {
  }
}