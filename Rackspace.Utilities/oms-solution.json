{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "2018.08.01.0",
  "parameters": {
    "workspaceName": {
      "defaultValue": "",
      "type": "string"
    },
    "solutionType": {
      "type": "array"
    }
  },
  "variables": {
    "Automation": [
      "AzureAutomation"
    ],
    "Solution": "[concat(parameters('solutionType'),variables('Automation'))]"
  },
  "resources": [
    {
      "id": "[resourceId(resourceGroup().name,'Microsoft.OperationsManagement/solutions',concat(variables('Solution')[copyIndex('SolutionCopy')], '(', parameters('workspaceName'), ')'))]",
      "type": "Microsoft.OperationsManagement/solutions",
      "name": "[concat(variables('Solution')[copyIndex('SolutionCopy')], '(', parameters('workspaceName'), ')')]",
      "apiVersion": "2015-11-01-preview",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "SolutionCopy",
        "count": "[length(variables('Solution'))]"
      },
      "plan": {
        "name": "[concat(variables('Solution')[copyIndex('SolutionCopy')], '(', parameters('workspaceName'), ')')]",
        "product": "[concat('OMSGallery/', variables('Solution')[copyIndex('SolutionCopy')])]",
        "promotionCode": "",
        "publisher": "Microsoft"
      },
      "properties": {
        "workspaceResourceId": "[resourceId(resourceGroup().name,'Microsoft.OperationalInsights/workspaces',concat('(', parameters('workspaceName'), ')'))]"
      }
    }
  ],
  "outputs": {
  }
}