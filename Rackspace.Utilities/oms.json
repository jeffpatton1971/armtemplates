{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "2019.05.01.0",
  "parameters": {
    "VirtualMachine": {
      "type": "string"
    },
    "Type": {
      "type": "string",
      "allowedValues": [
        "Linux",
        "Windows"
      ],
      "defaultValue": "Windows"
    },
    "WorkspaceId": {
      "type": "string"
    },
    "WorkspaceKey": {
      "type": "string"
    },
    "Version": {
      "type": "string",
      "allowedValues": [
        "1.0",
        "1.6"
      ],
      "defaultValue": "1.0"
    },
    "AutoUpgrade": {
      "type": "bool",
      "defaultValue": true
    }
  },
  "variables": {
    "type": "[if(equals(parameters('Type'),'Windows'),'MicrosoftMonitoringAgent','OmsAgentForLinux')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('VirtualMachine'),'/',variables('type'))]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
        "type": "[variables('type')]",
        "typeHandlerVersion": "[parameters('Version')]",
        "autoUpgradeMinorVersion": "[parameters('AutoUpgrade')]",
        "settings": {
          "workspaceId": "[parameters('WorkspaceId')]"
        },
        "protectedSettings": {
          "workspaceKey": "[parameters('WorkspaceKey')]"
        }
      }
    }
  ],
  "outputs": {
  }
}