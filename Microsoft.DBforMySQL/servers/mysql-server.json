{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "2018.10.01.0",
  "parameters": {
    "administratorLogin": {
      "type": "string"
    },
    "administratorLoginPassword": {
      "type": "securestring"
    },
    "location": {
      "type": "string"
    },
    "serverName": {
      "type": "string",
      "metadata": {
        "description": "Name of the server. Must contain only lowercase letters, numbers, and hyphens. Cannot begin or end with a hyphen."
      }
    },
    "skuName": {
      "type": "string",
      "allowedValues": [
        //"B_Gen5_1",
        //"B_Gen5_2",
        "GP_Gen5_2",
        "GP_Gen5_4",
        "GP_Gen5_8",
        "GP_Gen5_16",
        "GP_Gen5_32",
        "MO_Gen5_2",
        "MO_Gen5_4",
        "MO_Gen5_8",
        "MO_Gen5_16"
      ],
      "metadata": {
        "description": "The name of the sku, typically, tier + family + cores, e.g. B_Gen4_1, GP_Gen5_8. Basic will not support vnets."
      }
    },
    "skuSizeMB": {
      "type": "int",
      "defaultValue": 5120,
      "metadata": {
        "description": "Storage size in MiB between 5120 and 4194304. Must be divisable by 1024."
      }
    },
    "version": {
      "type": "string",
      "defaultValue": "5.7",
      "allowedValues": [
        "5.6",
        "5.7"
      ],
      "metadata": {
        "description": "MySQL server version"
      }
    },
    "sslEnforcement": {
      "type": "string",
      "defaultValue": "Disabled",
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "metadata": {
        "description": "Enable SSL enforcement or not when connecting to server"
      }
    },
    "backupRetentionDays": {
      "type": "int",
      "defaultValue": 7,
      "metadata": {
        "description": "Backup retention period between 7 and 35 days"
      }
    },
    "geoRedundantBackup": {
      "type": "string",
      "defaultValue": "Disabled",
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "metadata": {
        "description": "Enable geo-redundant backups"
      }
    },
    "firewallRuleName": {
      "defaultValue": "AllowAll",
      "minLength": 1,
      "maxLength": 128,
      "type": "string"
    },
    "firewallStartIpAddress": {
      "defaultValue": "0.0.0.0",
      "minLength": 1,
      "maxLength": 15,
      "type": "string",
      "metadata": {
        "description": "0.0.0.0 for start and end address allows access to Azure services"
      }
    },
    "firewallEndIpAddress": {
      "defaultValue": "0.0.0.0",
      "minLength": 1,
      "maxLength": 15,
      "type": "string",
      "metadata": {
        "description": "0.0.0.0 for start and end address allows access to Azure services"
      }
    },
    "vnetRuleName": {
      "type": "string",
      "metadata": {
        "description": "Name of the virtual network rule"
      }
    },
    "vnetSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the subnet to attach to"
      }
    },
    "vnetServiceEndpointIgnore": {
      "type": "bool",
      "defaultValue": true,
      "allowedValues": [
        true,
        false
      ],
      "metadata": {
        "description": "Create firewall rule before the virtual network has vnet service endpoint enabled."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DBforMySQL/servers",
      "sku": {
        "name": "[parameters('skuName')]",
        "size": "[parameters('skuSizeMB')]"
      },
      "kind": "",
      "name": "[parameters('serverName')]",
      "apiVersion": "2017-12-01",
      "location": "[parameters('location')]",
      "properties": {
        "version": "[parameters('version')]",
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "sslEnforcement": "[parameters('sslEnforcement')]",
        "storageProfile": {
          "storageMB": "[parameters('skuSizeMB')]",
          "backupRetentionDays": "[parameters('backupRetentionDays')]",
          "geoRedundantBackup": "[parameters('geoRedundantBackup')]"
        }
      },
      "resources": [
        {
          "type": "firewallRules",
          "name": "[parameters('firewallRuleName')]",
          "apiVersion": "2017-12-01",
          "location": "[parameters('location')]",
          "properties": {
            "startIpAddress": "[parameters('firewallStartIpAddress')]",
            "endIpAddress": "[parameters('firewallEndIpAddress')]"
          },
          "dependsOn": [
            "[concat('Microsoft.DBforMySQL/servers/', parameters('serverName'))]"
          ]
        },
        {
          "name": "[parameters('vnetRuleName')]",
          "type": "virtualNetworkRules",
          "apiVersion": "2017-12-01",
          "properties": {
            "virtualNetworkSubnetId": "[parameters('vnetSubnetId')]",
            "ignoreMissingVnetServiceEndpoint": "[parameters('vnetServiceEndpointIgnore')]"
          },
          "dependsOn": [
            "[concat('Microsoft.DBforMySQL/servers/', parameters('serverName'))]",
            "[concat(parameters('firewallRuleName'))]"
          ]
        }
      ]
    }
  ]
}
