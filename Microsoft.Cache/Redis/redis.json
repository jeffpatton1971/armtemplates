{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "2019.01.01.0",
  "parameters": {
    "name": {
      "type": "string"
    },
    "Network": {
      "type": "object"
    },
    "Shards": {
      "type": "int",
      "maxValue": 10,
      "defaultValue": 1
    },
    "enableNonSslPort": {
      "type": "bool",
      "defaultValue": false
    },
    "minimumTlsVersion": {
      "type": "string",
      "allowedValues": [
        "1.0",
        "1.1",
        "1.2"
      ],
      "defaultValue": "1.0"
    },
    "Sku": {
      "type": "string",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ],
      "defaultValue": "Basic"
    },
    "Capacity": {
      "type": "int",
      "minValue": 0,
      "maxValue": 6,
      "defaultValue": 0
    },
    "location": {
      "type": "string"
    },
    "environment": {
      "type": "string",
      "allowedValues": [
        "Production",
        "Staging",
        "Test",
        "UAT",
        "Development",
        "QA",
        "DisasterRecovery",
        "Other"
      ],
      "metadata": {
        "description": "The Environment type we are building",
        "group": "Tags",
        "order": 1,
        "question": "Please enter environment type : "
      },
      "defaultValue": "Production"
    },
    "buildDate": {
      "type": "string",
      "metadata": {
        "description": "The date of this build",
        "group": "Tags",
        "order": 2,
        "question": "Please enter todays date (mm/dd/yyyy) : "
      },
      "defaultValue": "mm/dd/yyyy"
    },
    "buildBy": {
      "type": "string",
      "metadata": {
        "description": "The name of the person who build this environment",
        "group": "Tags",
        "order": 3,
        "question": "Please enter your full name : "
      },
      "defaultValue": "First Last"
    },
    "RaxAutomationExclude": {
      "type": "string",
      "allowedValues": [
        "None",
        "Monitoring",
        "Passport",
        "Antimalware"
      ],
      "metadata": {
        "description": "Select the automation type you will like to exclude for this VM",
        "group": "Tags",
        "order": 4,
        "label": "Automation Exluce",
        "question": "Choose the type of automation you will like to exclude this from"
      },
      "defaultValue": "None"
    }
  },
  "variables": {
    "tags": {
      "displayName": "ApplicationGateway",
      "Environment": "[parameters('environment')]",
      "BuildDate": "[parameters('buildDate')]",
      "BuildBy": "[parameters('buildBy')]",
      "RaxAutomation|Exclude": "[parameters('RaxAutomationExclude')]"
    },
    "family": "[if(equals(parameters('Sku'),'Premium'),'P','C')]",
    "capacity": "[if(and(greaterOrEquals(parameters('Capacity'),4),equals(variables('family'),'C')),4,parameters('Capacity'))]",
    "location": "[if(empty(parameters('Location')),resourceGroup().location,parameters('Location'))]",
    "VirtualNetworkId": "[resourceId(parameters('Network').VirtualNetworkResourceGroupName,'Microsoft.Network/virtualNetworks/',parameters('Network').VirtualNetworkName)]",
    "SubnetId": "[concat(variables('VirtualNetworkId'),'/subnets/',parameters('Network').SubnetName)]",
    "redis": {
      "name": "[parameters('name')]",
      "type": "Microsoft.Cache/Redis",
      "apiVersion": "2018-03-01",
      "properties": {
        "redisConfiguration": {},
        "enableNonSslPort": "[parameters('enableNonSslPort')]",
        "tenantSettings": {},
        "shardCount": "[if(equals(variables('family'),'P'),parameters('Shards'),json('null'))]",
        "minimumTlsVersion": "[parameters('minimumTlsVersion')]",
        "sku": {
          "name": "[parameters('Sku')]",
          "family": "[variables('family')]",
          "capacity": "[if(equals(variables('family'),'P'),parameters('Capacity'),variables('capacity'))]"
        },
        "subnetId": "[if(equals(variables('family'),'P'),variables('SubnetId'),json('null'))]",
        "staticIP": "[json('null')]"
      },
      "zones": [],
      "location": "[variables('location')]",
      "tags": "[variables('tags')]",
      "resources": []
    }
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Cache/Redis",
      "apiVersion": "2018-03-01",
      "properties": {
        "redisConfiguration": {},
        "enableNonSslPort": "[parameters('enableNonSslPort')]",
        "tenantSettings": {},
        "shardCount": "[if(equals(variables('family'),'P'),parameters('Shards'),json('null'))]",
        "minimumTlsVersion": "[parameters('minimumTlsVersion')]",
        "sku": {
          "name": "[parameters('Sku')]",
          "family": "[variables('family')]",
          "capacity": "[if(equals(variables('family'),'P'),parameters('Capacity'),variables('capacity'))]"
        },
        "subnetId": "[if(equals(variables('family'),'P'),variables('SubnetId'),json('null'))]",
        "staticIP": "[json('null')]"
      },
      "zones": [],
      "location": "[variables('location')]",
      "tags": "[variables('tags')]",
      "resources": []
    }
  ],
  "outputs": {
    "redis": {
      "type": "object",
      "value": "[variables('redis')]"
    }
  }
}