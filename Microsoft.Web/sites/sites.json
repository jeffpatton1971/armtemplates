{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "2018.10.01.0",
  "parameters": {
    "Name": {
      "type": "string",
      "metadata": {
        "description": "The name of the web app that you wish to create."
      }
    },
    "AspName": {
      "type": "string",
      "metadata": {
        "description": "The name of the App Service plan to use for hosting the web app."
      }
    },
    "AseName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The name of the App Service Environment where the app service plan will be created."
      }
    },
    "netFrameworkVersion": {
      "type": "string",
      "defaultValue": "v4.6",
      "allowedValues": [
        "v3.5",
        "v4.7"
      ]
    },
    "phpVersion": {
      "type": "string",
      "defaultValue": "Off",
      "allowedValues": [
        "Off",
        "5.5",
        "5.6",
        "7.0",
        "7.1"
      ]
    },
    "pythonVersion": {
      "type": "string",
      "defaultValue": "Off",
      "allowedValues": [
        "Off",
        "2.7",
        "3.4"
      ]
    },
    "32Bit": {
      "type": "string",
      "defaultValue": "false",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "webSockets": {
      "type": "string",
      "defaultValue": "false",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "alwaysOn": {
      "type": "string",
      "defaultValue": "true",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "webServerLogging": {
      "type": "string",
      "defaultValue": "true",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "detailedErrors": {
      "type": "string",
      "defaultValue": "true",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "failedRequestTrace": {
      "type": "string",
      "defaultValue": "true",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "clientAffinityEnabled": {
      "type": "string",
      "defaultValue": "false"
    },
    "logSize": {
      "type": "int",
      "defaultValue": 25,
      "minValue": 25,
      "maxValue": 100
    },
    "environment": {
      "type": "string",
      "allowedValues": [
        "Production",
        "Staging",
        "Test",
        "UAT",
        "Development",
        "Disaster Recovery",
        "Q/A",
        "Other"
      ],
      "metadata": {
        "description": "The Environment type we are building",
        "group": "Tags",
        "order": 1,
        "question": "Please enter environment type : "
      },
      "defaultValue": "Production"
    },
    "buildDate": {
      "type": "string",
      "metadata": {
        "description": "The date of this build",
        "group": "Tags",
        "order": 2,
        "question": "Please enter todays date (mm/dd/yyyy) : "
      },
      "defaultValue": "mm/dd/yyyy"
    },
    "buildBy": {
      "type": "string",
      "metadata": {
        "description": "The name of the person who build this environment",
        "group": "Tags",
        "order": 3,
        "question": "Please enter your full name : "
      },
      "defaultValue": "First Last"
    },
    "RaxAutomationExclude": {
      "type": "string",
      "allowedValues": [
        "None",
        "Monitoring",
        "Passport",
        "Antimalware"
      ],
      "metadata": {
        "description": "Select the automation type you will like to exclude for this VM",
        "group": "Tags",
        "order": 4,
        "label": "Automation Exluce",
        "question": "Choose the type of automation you will like to exclude this from"
      },
      "defaultValue": "None"
    }
  },
  "variables": {
    "hostingEnvironmentProfile": "[if(empty(parameters('AseName')),json('null'),resourceId('Microsoft.Web/hostingEnvironments',parameters('AseName')))]",
    "tags": {
      "Environment": "[parameters('environment')]",
      "BuildDate": "[parameters('buildDate')]",
      "BuildBy": "[parameters('buildBy')]",
      "RaxAutomation|Exclude": "[parameters('RaxAutomationExclude')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2016-08-01",
      "type": "Microsoft.Web/sites",
      "name": "[parameters('Name')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverFarms',parameters('AspName'))]",
        "siteConfig": {
          "netFrameworkVersion": "[parameters('netFrameworkVersion')]",
          "PhpVersion": "[parameters('phpVersion')]",
          "pythonVersion": "[parameters('pythonVersion')]",
          "use32BitWorkerProcess": "[parameters('32Bit')]",
          "webSocketsEnabled": "[parameters('webSockets')]",
          "alwaysOn": "[parameters('alwaysOn')]",
          "requestTracingEnabled": "[parameters('failedRequestTrace')]",
          "httpLoggingEnabled": "[parameters('webServerLogging')]",
          "logsDirectorySizeLimit": "[parameters('logSize')]",
          "detailedErrorLoggingEnabled": "[parameters('detailedErrors')]"
        },
        "clientAffinityEnabled": "[parameters('clientAffinityEnabled')]",
        "hostingEnvironmentProfile": "[variables('hostingEnvironmentProfile')]"
      },
      "tags": "[variables('tags')]"
    }
  ],
  "outputs": {
  }
}