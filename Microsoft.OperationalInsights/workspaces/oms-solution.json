{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "defaultValue": "",
      "type": "string"
    },
    "solutionType": {
      "type": "string",
      "allowedValues": [
        "AzureAutomation",
        "Updates"
      ]
    }
  },
  "variables": {
  },
  "resources": [
    {
      "id": "[resourceId(resourceGroup().name,'Microsoft.OperationsManagement/solutions',concat(parameters('solutionType'), '(', parameters('workspaceName'), ')'))]",
      "type": "Microsoft.OperationsManagement/solutions",
      "name": "[concat(parameters('solutionType'), '(', parameters('workspaceName'), ')')]",
      "apiVersion": "2015-11-01-preview",
      "location": "[resourceGroup().location]",
      "plan": {
        "name": "[concat(parameters('solutionType'), '(', parameters('workspaceName'), ')')]",
        "product": "[concat('OMSGallery/', parameters('solutionType'))]",
        "promotionCode": "",
        "publisher": "Microsoft"
      },
      "properties": {
        "workspaceResourceId": "[resourceId(resourceGroup().name,'Microsoft.OperationalInsights/workspaces',concat('(', parameters('workspaceName'), ')'))]"
      }
    }
  ],
  "outputs": {
  }
}